#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin >> n;
    int a[n];
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    int max=0,c=0,ele,max_n=0;
    sort(a,a+n);
    for(int i=0;i<n;i++){
        c=0;
        for(int j=i+1;j<n;j++){
            if(abs(a[i]-a[j])<=1){
                c++;
                if(c>max_n){
                max_n=c;
            }
            }
            else{c=0;
                break;
            }
        }
        //cout<<maxi<<endl;
    }
    cout<<max_n+1<<endl;
    return 0;
    
}
